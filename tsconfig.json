{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs", 
		"outDir": "./backend/dist", 
		"rootDir": "./backend/src",
		"strict": true, 
		"esModuleInterop": true, 
		"skipLibCheck": true ,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true, 
	},
	"ts-node": {
		"esm": true
	},
	"watchOptions": {
		"watchFile": "dynamicPriorityPolling",
	},
	"include": ["backend/src/**/*", "backend/process-env.d.ts"], 
	"exclude": ["node_modules", "**/*.spec.ts", "frontend"],
	
}